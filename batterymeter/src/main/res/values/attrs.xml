<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="batteryMeterStyle" format="reference" />

    <declare-styleable name="BatteryMeterView">
        <attr name="batteryChargeLevel" format="integer" />
        <attr name="batteryCriticalChargeLevel" format="integer" />
        <attr name="batteryIsCharging" format="boolean" />

        <!-- Appearance -->
        <attr name="batteryColor" format="color" />
        <attr name="batteryIndicatorColor" format="color" />
        <attr name="batteryChargingColor" format="color" />
        <attr name="batteryCriticalColor" format="color" />
        <attr name="batteryUnknownColor" format="color" />

        <attr name="batteryTheme" format="enum">
            <enum name="rounded" value="0" />
            <enum name="sharp" value="1" />
        </attr>
    </declare-styleable>
</resources>